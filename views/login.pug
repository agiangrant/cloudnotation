html
    head
        script(src="jquery-3.1.1.min.js")
        script(src="bootstrap.min.js")
        script(src="scriptL.js")
        link(rel="stylesheet" type="text/css" href="bootstrap.min.css")
        link(rel="stylesheet" type="text/css" href="loginStyle.css")
        title= "CloudNotation - Login"
    body
        div(id="header")
            img(src="/images/general_icons/cn_logo.png" class="header-logo")
            h3 CloudNotation
        div(id="container")
            div(id="loginContainer")
                div(id="login" class="signup-form-input")
                    -if (message) 
                        p(id="login-error-text") #{message}
                    div(class="form-group")
                        form(action="/login" method="post")
                            h1 Login
                            div(class="username")
                                label(for="loginUsername" class="control-label") Email
                                input(id="loginUsername" class="form-control" type="text" name="username")
                            div(class="password")
                                label(for="loginPassword" class="control-label") Password
                                input(id="loginPassword" class="form-control" type="password" name="password")
                            br
                            div
                                input(type="submit" class="btn btn-default" value="Log in")
                div(id="signup" class="signup-form-input")
                    -if(signupError)
                        p(id="signup-error-text") #{signupError}
                    -if(signupSuccess)
                        p(id="signup-success-text") #{signupSuccess}
                    form(action="/register" method="post")
                        h1 Sign Up
                        div
                            input(id="firstName" class="form-control half-width" type="text" name="firstName" placeHolder="First Name")
                            input(id="lastName" class="form-control half-width" type="text" name="lastName" placeHolder="Last Name")
                        br
                        div
                            input(id="signupUsername" class="form-control" type="text" name="username" placeholder="Email")
                        div
                            input(id="signupPassword" class="form-control" type="password" name="password" placeholder="Password")
                        div
                            input(id="passwordConfirm" class="form-control" type="password" name="passwordConfirm" placeholder="Confirm Password")
                        br
                        div
                            input(type="submit" class="btn btn-default colorme-orange" value="Sign Up")
            div(id="infoContainer")
                h3 What is CloudNotation?
